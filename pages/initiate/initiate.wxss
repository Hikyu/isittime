/* pages/home/home.wxss */

.info {
  height: 160px;
  padding-bottom: 10px;
  padding-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.memberinfo-avatar {
  width: 88rpx;
  height: 88rpx;
  margin: 20rpx;
  border-radius: 50%;
  will-change: transform;
  box-shadow: 2px 0px 2px #686e74,
                0px 2px 2px #686e74,
                -2px 0px 2px #686e74,
                0px -2px 2px #686e74;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 0.875em;
}

.time {
  font-size: 1.5em;
  text-shadow: 1px 0px 1px #686e74,
                0px 1px 1px #686e74,
                -1px 0px 1px #686e74,
                0px -1px 1px #686e74;
}

.memberinfo {
  padding-left: 20px;
  padding-right: 20px;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-bottom: 20px;
}

.btngroup {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.link {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
